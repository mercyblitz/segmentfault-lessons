<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xml="http://www.w3.org/XML/1998/namespace" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd ">

	<listener>
		<listener-class>com.segmentfault.lesson5.servlet.ServletContextListenerImpl</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>JDBCTestServlet</servlet-name>
		<servlet-class>com.segmentfault.lesson5.servlet.JDBCTestServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>JDBCTestServlet</servlet-name>
		<url-pattern>/jdbc/test</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<res-ref-name>jdbc/TestDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<env-entry>
		<env-entry-name>Bean</env-entry-name>
		<env-entry-type>java.lang.String</env-entry-type>
		<env-entry-value>Hello,World</env-entry-value>
	</env-entry>

</web-app>
